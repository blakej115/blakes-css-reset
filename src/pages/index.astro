---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blake's CSS Reset">
	<main>
		<h1>Blake's CSS Reset</h1>
		<div class="buttons">
			<a href="/reset.css" target="_blank">Open</a>
			<a href="/reset.css" target="_blank" download>Download</a>
		</div>
		</div>
		<pre><code>{`* {
	color: inherit;
	font-family: inherit;
	font-size: inherit;
	font-weight: inherit;
	margin: 0;
	padding: 0;
	border-width: 0;
	background-color: transparent;
	box-sizing: border-box;
	list-style-type: none;
	text-decoration: none;
}

img,
svg,
video,
canvas,
audio,
iframe,
embed,
object {
	display: block;
}

img,
video {
	max-width: 100%;
	height: auto;
	object-fit: cover;
}`}</code></pre>
	</main>
</Layout>

<style>
	main {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		flex-grow: 1;
		gap: 1rem;
		padding: 2rem 1rem;
	}
	h1 {
		font-size: clamp(32px,5vw,100px);
		color: #8500ff;
		background: -webkit-linear-gradient(#00f1ff,#8500ff);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-weight: bold;
		text-align: center;
	}
	.buttons {
		display: flex;
		margin-bottom: 1rem;
		gap: 1rem;
		& a {
			display: block;
			background: linear-gradient(#00f1ff,#8500ff);
			padding: .5rem 1rem;
			border-radius: 4px;
			font-weight: bold;
		}
	}
	pre {
		background: #161616;
		padding: 1rem;
		border-radius: 4px;
		font-family: monospace;
		tab-size: 2;
	}
</style>